  <script>
    // small interactive helpers
    document.getElementById('year').textContent = new Date().getFullYear();

    function scrollToSection(id){
      const el = document.getElementById(id);
      if(!el) return; el.scrollIntoView({behavior:'smooth',block:'start'});
    }

    // theme toggle (light/dark)
    const root = document.documentElement;
    function toggleTheme(){
      const current = root.getAttribute('data-theme');
      if(current === 'light'){
        root.removeAttribute('data-theme');
        localStorage.setItem('aris_theme','dark');
      } else {
        root.setAttribute('data-theme','light');
        localStorage.setItem('aris_theme','light');
      }
      applyTheme();
    }
    function applyTheme(){
      const t = localStorage.getItem('aris_theme');
      if(t === 'light'){
        root.style.setProperty('--bg','#f7fbff');
        root.style.setProperty('--card','#ffffff');
        root.style.setProperty('--muted','#586674');
        root.style.setProperty('--accent','#06b6d4');
        document.body.style.color='#042029';
      } else {
        root.style.removeProperty('--bg');
        root.style.removeProperty('--card');
        root.style.removeProperty('--muted');
        root.style.removeProperty('--accent');
        document.body.style.color='';
      }
    }
    applyTheme();

    // mobile menu simple
    function toggleMobileMenu(){
      const nav = document.querySelector('nav');
      if(nav.style.display === 'flex') nav.style.display = '';
      else nav.style.display = 'flex';
    }

    // download simple vCard file
    function downloadVCard(){
      const vcard = [`BEGIN:VCARD`,`VERSION:3.0`,`FN:Aris Wolom`,`EMAIL:aris@example.com`,`TEL:+628123456789`,`END:VCARD`].join('\n');
      const blob = new Blob([vcard],{type:'text/vcard'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a'); a.href = url; a.download = 'aris-wolom.vcf'; document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(url);
    }

    // accessibility: keyboard shortcuts
    document.addEventListener('keydown', (e)=>{
      if(e.key === 'k' && (e.ctrlKey||e.metaKey)){
        e.preventDefault(); document.getElementById('downloadBtn').focus();
      }
    });
  </script>
